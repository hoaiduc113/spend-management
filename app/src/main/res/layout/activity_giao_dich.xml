<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"

    tools:context="com.example.hoaiduc.quanlychitieu.view.GiaoDichActivity.TransactionActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarcategory"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <com.example.hoaiduc.quanlychitieu.CustomView.CurrencyEditText
        android:id="@+id/extmoney"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:hint="số tiền"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/moneybag"
                android:layout_marginTop="@dimen/imggiaodic"
                android:id="@+id/imgwallett"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtgiaodich"

                android:layout_marginLeft="@dimen/magintex"
                android:textSize="@dimen/textgiaodich"
                android:layout_marginTop="@dimen/imggiaodic"
                android:hint="@string/tengiaodich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_marginTop="@dimen/textgiaodich"
               android:src="@drawable/notepad"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />
           <EditText
               android:id="@+id/extnote"
               android:textSize="@dimen/textgiaodich"
               android:layout_marginLeft="@dimen/magintex"
               android:hint="@string/note"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/textgiaodich"
                android:src="@drawable/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/calendar"
                android:layout_marginTop="@dimen/textgiaodich"
                android:textSize="@dimen/textgiaodich"
                android:text="@string/today"
                android:layout_marginLeft="@dimen/magintex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
